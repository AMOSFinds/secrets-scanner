{
  "ignore": {
    "paths": ["tests/**", "docs/**"],
    "patterns": ["DUMMY_API_KEY=.*"]
  },
  "forbid": {
    "patterns": ["AKIA[0-9A-Z]{16}"]
  },
  "severity_overrides": {
    "GENERIC_PASSWORD": "HIGH",
    "JWT": "HIGH"
  },
  "min_entropy": {
    "LOW": 3.5,
    "MED": 4.0,
    "HIGH": 4.5
  },
  "allow_env_names": ["DUMMY_API_KEY"]
}
